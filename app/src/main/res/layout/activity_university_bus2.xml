<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@color/backGround"
    tools:context=".UniversityBus2">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="University Bus Schedule"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="bold"
        />
    <View
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_height="2dp"
        android:background="@color/colorPrimary"
        android:layout_marginTop="5dp"
        />

    <RelativeLayout
        android:layout_marginTop="15dp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <LinearLayout
            android:id="@+id/diuBus"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="25dp"
            android:background="@drawable/custom_banner"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="5dp">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/diuwhitebg" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Daffodil International University"
                android:textAlignment="center"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bupBus"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="25dp"
            android:background="@drawable/custom_banner"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="5dp">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/bupwhitebg" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Bangladesh University of Professionals"
                android:textAlignment="center"
                android:textColor="@color/black" />

        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:id="@+id/ulabBus"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="25dp"
            android:background="@drawable/custom_banner"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="5dp">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/ulab" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="University of Liberal Arts Bangladesh"
                android:textAlignment="center"
                android:textColor="@color/black" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/uiuBus"
            android:layout_height="wrap_content"
            android:layout_width="150dp"
            android:gravity="center"
            android:padding="5dp"
            android:layout_alignParentEnd="true"
            android:orientation="vertical"
            android:layout_marginRight="25dp"
            android:background="@drawable/custom_banner">

            <ImageView
                android:layout_height="60dp"
                android:layout_width="60dp"
                android:background="@drawable/uiulogo"/>
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:layout_marginTop="5dp"
                android:text="United International University"
                android:textColor="@color/black"/>

        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:id="@+id/juBus"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="25dp"
            android:background="@drawable/custom_banner"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="5dp">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/julogo" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Jahangirnagir University "
                android:textAlignment="center"
                android:textColor="@color/black" />
        </LinearLayout>



    </RelativeLayout>


</LinearLayout>